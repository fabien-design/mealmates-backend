{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}
    <i class="fas fa-chart-line"></i> Tableau de bord - MealMates
{% endblock %}

{% block main %}
    <div class="row">
        <div class="col-lg-3 col-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Reviews en attente</div>
                            <div class="text-lg fw-bold">{{ pending_reviews_count ?? 0 }}</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-star fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="{{ ea_url().setController('App\\Controller\\Admin\\ReviewCrudController') }}">
                        Voir les reviews
                    </a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Utilisateurs en attente</div>
                            <div class="text-lg fw-bold">{{ pending_users_count ?? 0 }}</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="{{ ea_url().setController('App\\Controller\\Admin\\UserToReviewCrudController') }}">
                        Gérer les utilisateurs
                    </a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Offres</div>
                            <div class="text-lg fw-bold">{{ pending_offers_count ?? 0 }}</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-utensils fa-2x"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="{{ ea_url().setController('App\\Controller\\Admin\\OfferToReviewCrudController') }}">
                        Voir les offres
                    </a>
                    <div class="small text-white">
                        <i class="fas fa-angle-right"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-3 col-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Transactions</div>
                            <div class="text-lg fw-bold">{{ transactions_count ?? 0 }}</div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-credit-card fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-chart-area me-1"></i>
                    Actions rapides
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h5 class="card-title">Modération</h5>
                            <p class="card-text">Gérez les reviews en attente de modération</p>
                            <a href="{{ ea_url().setController('App\\Controller\\Admin\\ReviewCrudController') }}" class="btn btn-primary">
                                <i class="fas fa-star"></i> Modérer les reviews
                            </a>
                        </div>
                        <div class="col-md-6">
                            <h5 class="card-title">Gestion</h5>
                            <p class="card-text">Accédez aux outils de gestion de la plateforme</p>
                            <a href="{{ ea_url().setController('App\\Controller\\Admin\\UserCrudController') }}" class="btn btn-success me-2">
                                <i class="fas fa-users"></i> Utilisateurs
                            </a>
                            <a href="{{ ea_url().setController('App\\Controller\\Admin\\OfferCrudController') }}" class="btn btn-warning">
                                <i class="fas fa-utensils"></i> Offres
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
